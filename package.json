{
  "name": "spacing-component",
  "version": "1.0.2",
  "description": "A Vue 3 component library for spacing utilities",
  "main": "./dist/spacing-component.cjs.js",
  "module": "./dist/spacing-component.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc -p tsconfig.json",
    "type-check": "vue-tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "lint": "eslint 'src/**/*.{js,ts,vue}' --fix",
    "format": "prettier --write 'src/**/*.{ts,vue,md,json}'",
    "predeploy": "npm run build-storybook && echo > storybook-static/.nojekyll",
    "deploy": "gh-pages -d storybook-static"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamutkarshb/spacing-component.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "components",
    "spacing",
    "ui"
  ],
  "author": "utkarsh-bansal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iamutkarshb/spacing-component/issues"
  },
  "homepage": "https://iamutkarshb.github.io/spacing-component",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/builder-vite": "^9.1.4",
    "@storybook/vue3-vite": "^9.1.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "gh-pages": "^6.3.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "rollup": "^4.49.0",
    "storybook": "^9.1.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6"
  }
}
